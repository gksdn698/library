<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jafa.repository.BookAttachRepository">
  
    <insert id="insert">
		insert into tbl_attach_book(uuid,uploadPath,fileName,fileType,bno)
		values (#{uuid}, #{uploadPath}, #{fileName},#{fileType},#{bno})
    </insert>
    
	<delete id="delete">
		delete from tbl_attach_book where uuid=#{uuid}
	</delete>
	
	<select id="selectByBno" resultType="bookAttachVO">
		select * from tbl_attach_book where bno = #{bno}
	</select>
	
	<select id="selectByUuid" resultType="bookAttachVO">
		select * from tbl_attach_book where uuid = #{uuid}
	</select>
	
	<delete id="deleteAll">
		delete from tbl_attach_book where bno = #{bno}
	</delete>
	
	<select id="pastFiles" resultType="bookAttachVO">
		select * from tbl_attach_book where uploadPath = to_char(sysdate,'yyyy/MM/dd')
	</select> 
</mapper>